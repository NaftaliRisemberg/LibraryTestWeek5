@model LibraryTestWeek5.viewModels.viewModelToCreateBook

@{
    ViewData["Title"] = "CreateBook";
}

<h1>Book</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="book.Title" class="control-label"></label>
                <input asp-for="book.Title" class="form-control" />
                <span asp-validation-for="book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="book.Height" class="control-label"></label>
                <input asp-for="book.Height" class="form-control" />
                <span asp-validation-for="book.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="book.Width" class="control-label"></label>
                <input asp-for="book.Width" class="form-control" />
                <span asp-validation-for="book.Width" class="text-danger"></span>
			</div> 
            <label asp-for="LibId" class="control-label">ז'אנר</label>
            
            <select onselect="ChangeShelves(this.value)" asp-for="LibId" class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                @foreach (var item in Model.libraries)
                {

                    <option value="@item.Id">@item.Genre</option>
                }
			
            </select>
			<label asp-for="ShelfId" class="control-label">מדף</label>
            <select asp-for="ShelfId" class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                @foreach (var item in Model.shelves)
                {
                    // ניסיתי ליצור כאן את הסלקט לפי הבחירה של המתמש בסלקט של הספריות 
                    //לממעשה לא הצלחתי לבצע בדיקה על המזהה 
                    //ספריה של כל מדף אם הוא שווה לספריה שנבחרה כך שהדברים נשארו פתוחים כרגע
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
                
            


            
			
